<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/adSoyad"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:layout_marginTop="124dp"
        android:autofillHints=""
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/editText"
        android:inputType="textPersonName"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoster"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="316dp"
        android:layout_height="53dp"
        android:layout_marginTop="44dp"
        android:background="@color/black"
        android:backgroundTint="#DD0000"
        android:text="@string/clickBtn"
        android:textColor="#FAECE9"
        app:iconTint="#0B24FF"
        app:layout_constraintEnd_toEndOf="@+id/adSoyad"
        app:layout_constraintStart_toStartOf="@+id/adSoyad"
        app:layout_constraintTop_toBottomOf="@+id/adSoyad"
        app:rippleColor="#FFFFFF" />

    <TextView
        android:id="@+id/goster"
        android:layout_width="277dp"
        android:layout_height="99dp"
        android:layout_marginTop="52dp"
        android:background="#FFFFFF"
        android:text="@string/textView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btnGoster"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/btnGoster"
        app:layout_constraintTop_toBottomOf="@+id/btnGoster" />
</androidx.constraintlayout.widget.ConstraintLayout>